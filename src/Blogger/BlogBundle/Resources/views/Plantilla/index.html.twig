{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}
{% extends '@BloggerBlog/Plantilla/layout.html.twig' %}

{% block body %}
    Rafael Carmona Arrabal : Blog homepage
  {% for blog in blogs %}
        <article class="blog">
        <header>
            <div class="date">
                <time datetime="{{ blog.created|date('c') }}">
                    {{ blog.created|date('l, F j, Y') }}
                </time></div>
            <h2>{{ blog.title }}</h2>
        </header>

        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
        <div class="snippet">
            <p>{{ blog.blog() }}</p>
            <p class="continue"><a href="{{ path('show', {'id': blog.id}) }}">Contin√∫a leyendo</a></p>
        </div>
    </article>
    <footer class="meta">
        <p>Comments:<a href="">{{blog.comments|length}}</a></p>
        <p>Posted by <span class="highlight">{{blog.author}}</span> at 
        {{ blog.created|date('h:iA') }}</p>
        <p>Tags: <span class="highlight">{{ blog.tags }}</span></p>
    </footer>
    {% endfor %}

{% endblock %}
